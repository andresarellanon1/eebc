<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_wizard_selection_line_tree" model="ir.ui.view">
    <field name="name">wizard.selection.line.tree</field>
    <field name="model">wizard.selection.line</field>
    <field name="arch" type="xml">
        <tree>
            <field name="record_id" />
            <field name="quantity" />
        </tree>
    </field>
</record>

<record id="view_wizard_selection_line_form" model="ir.ui.view">
    <field name="name">wizard.selection.line.form</field>
    <field name="model">wizard.selection.line</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <field name="record_id" />
                <field name="quantity" />
            </sheet>
        </form>
    </field>
</record>

</odoo>