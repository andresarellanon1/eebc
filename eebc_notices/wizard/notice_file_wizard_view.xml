<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_notice_file_view" model="ir.ui.view">
        <field name="name">Wizard File Upload</field>
        <field name="model">notice.file.wizard</field>
        <field name="arch" type="xml">
            <form string="Analisar archivo">
             <sheet>
                <notebook>
                <group>
                        <field name="create_tab" widget="boolean_toggle"/>
                        <field name="update_tab" widget="boolean_toggle"/>
                </group>
                    <page string="Crear nuevo aviso" name="create_page_tab"  invisible="create_tab">

                        <group>
                        
                            <field name="notice" />
                            <field name="folio" />
                            <field name="description" />
                            <field name="account_move_invoice_ids" />
                            <field name="res_partner_supplier_id" />
                            <field name="purchases_order_id" />
                            <field name="quantity" />

                        </group>
                    </page>


                    <page string="Asignar cantidades a los avisos" name="assign_tab">

                         <group>
                            <field name="quantity" readonly="1"/>

                                <field name="notice_ids">
                                    <tree create="0">
                                        <field name="notice_id"  options="{'no_open': True}"/>
                                        <field name="quantity"/>
                                        <field name="quantity_available" column_invisible="1" />
                                        <field name="test_name" column_invisible="1" invisible="1"/>


                                    </tree>
                                </field>
                        </group>
                    </page>
                </notebook>
            </sheet>
               
                <footer>
                
                    <button name="create_notice" type="object" string="Crear aviso" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    

                </footer>
            </form>
        </field>
    </record>


    
    <record id="wizard_notice_error" model="ir.ui.view">
        <field name="name">Wizard Error</field>
        <field name="model">notice.file.wizard</field>
        <field name="arch" type="xml">
            <form string="Error">
              <group>
                    <field name="message" readonly="1" />
                </group>
                <footer>
                    <button string="Cerrar" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
