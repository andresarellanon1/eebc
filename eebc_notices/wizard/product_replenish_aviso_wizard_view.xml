<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_replenish_form_inherit_stock" model="ir.ui.view">
        <field name="name">product.replenish.form.inherit.stock</field>
        <field name="model">product.replenish</field>
        <field name="inherit_id" ref="stock.view_product_replenish"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='route_id']" position="after">
                <label for="supplier_id" invisible="not show_vendor"/>
                <div class="o_row">
                    <field name="show_vendor" invisible="1"/>
                    <field name="supplier_id" invisible="not show_vendor" required="show_vendor" domain="[('product_tmpl_id', '=', product_tmpl_id)]" options="{'no_open': 1, 'no_create': 1}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='product_qty']" position="after">
                <field name="has_aviso" invisible="1"/>
                <button name="action_open_aviso_wizard" string="Add Aviso Details" type="object" class="oe_highlight" attrs="{'invisible': [('has_aviso', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_replenish_aviso_wizard_form" model="ir.ui.view">
        <field name="name">product.replenish.aviso.wizard.form</field>
        <field name="model">product.replenish.aviso.wizard</field>
        <field name="arch" type="xml">
            <form string="Aviso Details">
                <group>
                    <field name="total_qty" readonly="1"/>
                    <field name="aviso_lines">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="folio"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>