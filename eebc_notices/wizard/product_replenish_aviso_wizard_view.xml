<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_replenish_form_inherit_stock" model="ir.ui.view">
        <field name="name">product.replenish.form.inherit.stock</field>
        <field name="model">product.replenish</field>
        <field name="inherit_id" ref="stock.view_product_replenish"/>
        <field name="arch" type="xml">

        <xpath expr="//field[@name='product_id']" position="after">
            <field name="has_aviso" invisible="1"/>
        </xpath>
            <xpath expr="//footer/button[@name='launch_replenishment']" position="replace">
                <button name="action_open_aviso_wizard" string="Add Aviso Details" type="object" class="btn-primary" invisible="not has_aviso"/>
                <button name="launch_replenishment" string="Confirm" type="object" class="btn-primary" invisible="has_aviso"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_replenish_aviso_wizard_form" model="ir.ui.view">
        <field name="name">product.replenish.aviso.wizard.form</field>
        <field name="model">product.replenish.aviso.wizard</field>
        <field name="arch" type="xml">
            <form string="Aviso Details">
                <group>
                    <field name="total_qty" readonly="1"/>
                    <field name="aviso_lines">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="folio"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>