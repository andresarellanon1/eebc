<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="purchase_order_line_form_view_inherit" model="ir.ui.view">
    <field name="name">purchase.order.line.form.inherit</field>
    <field name="model">purchase.order.line</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='products']/field[@name='order_line']/tree[1]/field[@name='product_qty']" position="after">
            <field name="aviso_name"/>
            <field name="folio"/>
            <field name="aviso_quantity"/>
        </xpath>
    </field>
</record>

</odoo>