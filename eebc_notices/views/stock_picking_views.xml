<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="form_view_inherit_stock_picking_notice" model="ir.ui.view">
        <field name="name">form.view.inherit.stock.picking.notice</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree" position="inside">
                <!-- Campo invisible para controlar la visibilidad del botón en cada producto -->
                <field name="has_aviso_in_attributes" invisible="1"/>

                <!-- Añadimos un botón para cada producto en la línea de picking -->
                <button name="create_notice" type="object" string="Crear Aviso" icon="fa-area-chart"
                        invisible="has_aviso_in_attributes"/>
            </xpath>
        </field>
    </record>
</odoo>