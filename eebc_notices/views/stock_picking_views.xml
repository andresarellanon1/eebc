<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="form_view_inherit_stock_picking_notice" model="ir.ui.view">
        <field name="name">form.view.inherit.stock.picking.notice</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree" position="inside">
                <!-- Campo invisible para controlar la visibilidad del botón en cada producto -->
                <field name="has_aviso_in_attributes" column_invisible="1" invisible="1"/>

                <!-- Añadimos un botón para cada producto en la línea de picking -->
              
            </xpath>


           
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='operations']/field[@name='move_ids_without_package']/tree[1]/field[@name='product_uom']" position="after">
                <field name="picking_type_codigo" invisible="1"/>

                <button name="call_wizard" 
                        type="object" 
                        string="Subir archivo" 
                        icon="fa-area-chart"
                        invisible="['&', ('has_type_picking_notice_approve', '=', False), ('has_aviso_in_attributes', '=', False)]"/>
            </xpath>
        </field>
    </record>


    <record id="form_view_inherit_stock_picking_type_notice" model="ir.ui.view">
        <field name="name">form.view.inherit.stock.picking.type.notice</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">

             <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='general']/group[@name='first']/group[1]/field[@name='auto_show_reception_report']" position="after">
                <field name="notice_approve"/>
            </xpath>

         </field>
    </record>

</odoo>