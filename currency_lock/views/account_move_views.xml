<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="currency_selector_account_move_form_view">
        <field name="name">currency.selector.account.move.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="locked_currency_rate" invisible="currency_id == 33" readonly="1"
                    force_save="1" />
                <field name="target_currency_id" invisible="currency_id == 33" />
            </xpath>
        </field>
    </record>
</odoo>
