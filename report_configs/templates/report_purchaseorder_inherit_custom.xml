<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_configs.report_purchaseorder_inherit_custom" inherit_id="sale.report_purchaseorder">
            <xpath expr="//t[@t-call='sale.report_purchaseorder_document']" position="replace">
                <t t-set="lang" t-value="doc.partner_id.lang"/>
                <t t-if="doc._get_name_purchase_report() == 'sale.report_purchaseorder_document'" t-call="sale.report_purchaseorder_document" t-lang="lang"/>
                <t t-elif="doc._get_name_purchase_report() == 'report_configs.out_purchaseorder_template_custom'" t-call="report_configs.out_purchaseorder_template_custom" t-lang="lang" />
            </xpath>
        </template>
    </data>
</odoo>