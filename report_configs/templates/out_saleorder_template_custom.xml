                            <table class="table">
                                <thead>
                                    <tr id="encabezados-tabla" style="background-color: rgb(0, 0, 107); font-size: 10px; color: white;">
                                        <th style="width: 5%;">Pda.</th>
                                        <th style="width: 5%;"></th>
                                        <th style="width: 45%;">Descripción</th>
                                        <th style="width: 10%;">Tiempo de Entrega</th>
                                        <th style="width: 10%;">Cantidad</th>
                                        <th style="width: 5%;">U.M.</th>
                                        <th style="width: 10%;">P. Unitario</th>
                                        <th style="width: 10%;">Total</th>
                                    </tr>
                                </thead>
                                <tbody style="font-size: 9px;">
                                    <t t-set="contador_productos" t-value="0"/>
                                    <t t-set="total_importe" t-value="0"/>
                                    <t t-foreach="factura.invoice_line_ids" t-as="linea" t-index="i">
                                        <t t-if="linea.display_type == 'product'">
                                            <t t-set="contador_productos" t-value="contador_productos + 1"/>
                                        </t>
                                        <t t-if="linea.display_type == 'line_section'">
                                            <tr>
                                                <td colspan="8" style="font-weight: bold; background-color: #f5f5f5; text-align: center;">
                                                    <t t-esc="linea.name"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="linea.display_type == 'line_note'">
                                            <tr>
                                                <td colspan="8" style="font-style: italic; background-color: #fafafa;">
                                                    <t t-esc="linea.name"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="linea.display_type == 'product'">
                                            <tr>
                                                <td>
                                                    <t t-esc="contador_productos"/>
                                                </td>
                                                <td>
                                                    <t t-esc="linea.product_id.default_code or ''"/>
                                                </td>
                                                <td>
                                                    <t t-esc="linea.product_id.name or ''"/>
                                                </td>
                                                <td>
                                                    INMEDIATO
                                                </td>
                                                <td>
                                                    <t t-esc="line.quantity"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.product_uom_id.name"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.price_unit"/>
                                                </td>
                                                <td style="text-align: right;">
                                                    <t t-set="importe" t-value="(linea.price_unit or 0) * (linea.quantity or 0)"/>
                                                    <t t-esc="importe"/>
                                                    <t t-set="total_importe" t-value="total_importe + importe"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                            <table class="table" style="width: 100%; font-size: 8px;">
                                <tbody>
                                    <tr>
                                        <td rowspan="2" style="padding: 10px 20px; font-size: 11px;" class="col-3">
                                            <t t-set="iva" t-value="total_importe * 0.08"/>
                                            <t t-set="total" t-value="total_importe + iva"/>
                                            <p>SUBTOTAL $ <t t-esc="total_importe"/>
                                            </p>
                                            <p>IVA 8% $ <t t-esc="iva"/>
                                            </p>
                                            <p>TOTAL $ <t t-esc="total"/>
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div style="position: fixed; bottom: 0; left: 0; width: 100%; font-size: 8px; background-color: white;">
                                <p style="text-align: left;">www.eebc.com.mx</p>
                                <table class="table" style="width: 100%; font-size: 8px;">
