<odoo>
    <record id="pricelist_currency_selector_settings_inherit" model="ir.ui.view">
        <field name="name">pricelist.currency.selector.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_pricelist_setting']" position="after">
                <field name="default_product_pricelist_id"
                    options="{'no_create': True}"
                    class="o_light_label" />
            </xpath>
        </field>
    </record>
</odoo>
