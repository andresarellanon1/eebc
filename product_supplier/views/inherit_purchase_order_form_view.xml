<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="inherit_purchase_order_form_view">
        <field name="name">inherit.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_template_id']" position="attributes">
                <attribute name="domain">[('id', 'in', parent.supplier_products_ids.ids)]</attribute>
            </xpath>
        </field>
    </record>

</odoo>
