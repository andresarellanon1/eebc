<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="inherit_purchase_order_form_view">
        <field name="name">inherit.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_product_matrix.purchase_order_form_matrix" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_template_id']" position="replace">
                <field name="supplier_products_ids" column_invisible="1"/>
                <field name="product_template_id" string="Product" domain="[('id', 'in', supplier_products_ids)]" readonly="state in ('purchase', 'to approve', 'done', 'cancel')" required="not display_type"/>
            </xpath>
        </field>
    </record>

</odoo>
