<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="inherit_purchase_order_form_view">
        <field name="name">inherit.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[(id, 'in', product_ids)]</attribute>
                <attribute name="column_invisible">0</attribute>
            </xpath>
        </field>
    </record>

</odoo>
