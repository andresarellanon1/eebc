<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="inherit_purchase_order_form_view">
        <field name="name">inherit.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="after">
                <field name="supplier_products_ids" invisible="1"/>
            </xpath>
            <xpath expr="//tree/field[@name='product_template_id']" position="attributes">
                <attribute name="domain">[('id', 'in', supplier_products_ids.ids)]</attribute>
            </xpath>
        </field>
    </record>

</odoo>
