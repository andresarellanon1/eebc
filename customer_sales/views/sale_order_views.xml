<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="customer_sales_sale_order_form_view">
        <field name="name">customer.sales.sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="material_change" widget="boolean_toggle"
                    readonly="False"
                    groups="morvil_security.group_morvil_extra_material_change" />
                <field name="material_change" widget="boolean_toggle"
                    readonly="state == 'sale'"
                    groups="!morvil_security.group_morvil_extra_material_change" />
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">
                    [('is_customer','=',True)]
                </attribute>
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="quotation_user_id" />
            </xpath>

            <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                <attribute name="domain">
                    ['|',('parent_id','=',partner_id), ('id','=',partner_id)]
                </attribute>
            </xpath>

            <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="domain">
                    ['|',('parent_id','=',partner_id), ('id','=',partner_id)]
                </attribute>
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="before">
                <field name="urgency_type" readonly="state in ('sale', 'cancel')" />
            </xpath>

            <xpath expr="//field[@name='urgency_type']" position="after">
                <field name="contrat_id" widget="many2one" />
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="customer_reference" />
            </xpath>

        </field>
    </record>
</odoo>
