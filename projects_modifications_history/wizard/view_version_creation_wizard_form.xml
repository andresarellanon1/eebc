<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_version_creation_wizard_form" model="ir.ui.view">
            <field name="name">version.creation.wizard.form</field>
            <field name="model">project.version.wizard</field>
            <field name="arch" type="xml">
                <form string="Project version">
                    <sheet>
                        <group>
                            <group>
                                <field name="modified_by" readonly="1"/>
                                <field name="modification_date" readonly="1"/>
                            </group>

                            <notebook>
                                <page name="motive" string="Modification motive">
                                    <field name="modification_motive"/>
                                </page>
                                <page name="tasks" string="Tasks">
                                    <div style="width: 100%;">
                                        <field name="project_plan_lines" nolabel="1" style="pointer-events:none">
                                            <tree style="width: 100%;" editable="editable_bottom">
                                                <field name="name"/>
                                                <field name="chapter"/>
                                                <field name="description"/>
                                                <field name="use_project_task"/>
                                                <field name="planned_date_begin" widget="daterange"/>
                                                <field name="planned_date_end" widget="daterange"/>
                                                <field name="partner_id" widget="many2many_avatar_user"/>
                                                <field name="task_timesheet_id" options="{'create': True}"/>
                                                <field name="stage_id"/>
                                            </tree>
                                        </field>
                                    </div>
                                </page>
                                <page name="stock" string="Stock">
                                    <div>
                                        <field name="project_picking_lines" nolabel="1" style="pointer-events:none">
                                            <tree style="width: 100%;" editable="editable_bottom">
                                                <field name="product_id"/>
                                                <field name="quantity"/>
                                                <field name="location_id"/>
                                            </tree>
                                        </field>
                                    </div>
                                </page>
                            </notebook>
                        </group>

                        <footer>
                            <button name="action_confirm_version_history" string="Save Project"
                                type="object" class="btn-primary" />
                            <button string="Cancel" class="btn-secondary" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>