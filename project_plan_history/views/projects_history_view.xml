<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_history_action_view_tree" model="ir.ui.view">
            <field name="name">project.version.action.tree</field>
            <field name="model">project.version</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="project_name" string="Nombre del proyecto"/>
                    <field name="motive" string="Motivo del cambio"/>
                    <field name="version_date" string="Fecha de la version"/>
                    <field name="modified_by" string="Modificado por"/>
                </tree>
            </field>
        </record>

        <record id="project_history_view_form" model="ir.ui.view">
            <field name="name">project.version.action.form</field>
            <field name="model">project.version</field>
            <field name="arch" type="xml">
                <form string="History of changes">
                    <sheet>
                        <div class="oe_title">
                            <label for="project_name"/>
                            <h1>
                                <field name="project_name" class="w-100" required="1" readonly="1"/>
                            </h1>
                            <group>
                                <field name="motive" readonly="1"/>
                                <field name="version_date" readonly="1"/>
                                <field name="modified_by" readonly="1"/>
                                <field name="date_start" readonly="1"/>
                            </group>
                        </div>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description" options="{'resizable': false}" readonly="1" widget="html"/>
                            </page>
                            <page string="Planeación">
                                <div>
                                    <field name="project_plan_lines" widget="One2many_list" options="{'no_create': True, 'no_edit': True}" nolabel="1">
                                        <tree create="false" delete="false" editable="bottom" width="100%">
                                            <field name="name" string="Nombre" readonly="1"/>
                                            <field name="chapter" string="Capítulo" readonly="1"/>
                                            <field name="planned_date_begin" string="Fecha de inicio" readonly="1"/>
                                            <field name="planned_date_end" string="Fecha de finalización" readonly="1"/>
                                            <field name="stage_id" string="Fase" readonly="1"/>
                                        </tree>
                                    </field>
                                </div>
                            </page>
                            <page string="Inventario">
                                <div>
                                    <field name="project_picking_lines" widget="One2many_list" options="{'no_create': True, 'no_edit': True}" nolabel="1">
                                        <tree create="false" delete="false" editable="bottom" width="100%">
                                            <field name="product_id" string="Producto" readonly="1"/>
                                            <field name="quantity" string="Cantidad" readonly="1"/>
                                            <field name="location_id" string="Ubicación" readonly="1"/>
                                        </tree>
                                    </field>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
