<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_change_reason_wizard" model="ir.ui.view">
            <field name="name">change.reason.wizard.form</field>
            <field name="model">change.reason.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="motive" />
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="confirm" class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>