<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_supplier_last_price_product_supplierinfo_history_tree" model="ir.ui.view">
            <field name="name">supplier.last.price.product.supplierinfo.history.tree</field>
            <field name="model">product.supplierinfo_history</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="datetime" />
                    <field name="order_id" />
                    <field name="landed_cost" />
                    <field name="product_supplierinfo_id" />
                    <field name="price_unit" widget="monetary"
                        options="{'currency_field': 'currency_id'}" />
                    <field name="currency_id" />
                </tree>
            </field>
        </record>

        <record id="view_supplier_last_price_product_supplierinfo_history_tree_form"
            model="ir.ui.view">
            <field name="name">supplier.last.price.product.supplierinfo.history.form</field>
            <field name="model">product.supplierinfo_history</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="datetime" />
                        <field name="order_id" />
                        <field name="landed_cost" />
                        <field name="product_supplierinfo_id" />
                        <field name="product_template_id" />
                        <field name="product_id" />
                        <field name="price_unit" widget="monetary"
                            options="{'currency_field': 'currency_id'}" />
                        <field name="currency_id" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
