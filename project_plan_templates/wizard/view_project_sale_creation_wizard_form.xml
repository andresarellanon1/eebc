<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_project_sale_creation_wizard_form" model="ir.ui.view">
            <field name="name">project.sale.creation.wizard.form</field>
            <field name="model">project.sale.creation.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale order project creation">
                    <sheet>
                         <group>
                            <div style="width: 100%">
                                <h1>Only one project is allowed per sale order.</h1>
                                <h2>Choose one and delete the other ones.</h2>
                            </div>
                            <notebook>
                                <page name="services" string="Services">
                                    <div style="100%">
                                        <field name="services_ids" nolabel="1">
                                            <tree>
                                                <field name="name"/>
                                                <field name="project_plan_id"/>
                                            </tree>
                                        </field>
                                    </div>
                                </page>
                            </notebook>
                         </group>

                         <footer>
                            <button name="confirm_wizard" string="Confirm"
                                type="object" class="btn-primary" />
                            <button string="Cancel" class="btn-secondary" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>