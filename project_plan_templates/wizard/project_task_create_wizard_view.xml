<record id="view_project_task_create_wizard" model="ir.ui.view">
    <field name="name">project.task.create.wizard.form</field>
    <field name="model">project.task.create.wizard</field>
    <field name="arch" type="xml">
        <form string="Crear Nueva Tarea">
            <group>
                <field name="name"/>
                <field name="project_id" invisible="1"/>
            </group>
            <footer>
                <button name="action_create_task" type="object" string="Crear Tarea" class="btn-primary"/>
                <button string="Cancelar" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>
