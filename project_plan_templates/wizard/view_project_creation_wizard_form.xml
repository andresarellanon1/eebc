<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_project_creation_wizard_form" model="ir.ui.view">
            <field name="name">project.creation.wizard.form</field>
            <field name="model">project.creation.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Project Creation">
                    <sheet>
                        <group>
                            <group>
                                <field name="project_name" />
                            </group>
                            <notebook>
                                <page name="description" string="Description">
                                    <field name="description" />
                                </page>
                                <page name="planning" string="Planning">
                                    <group>
                                        <field name="project_plan_id" invisible="1"/>
                                    </group>
                                    <div style="100%">
                                        <field name="wizard_plan_lines" nolabel="1">
                                            <tree editable="bottom" style="width: 100%;">
                                                <field name="name"/>
                                                <field name="chapter"/>
                                                <field name="description"/>
                                                <field name="use_project_task"/>
                                                <field name="planned_date_begin" widget="daterange"/>
                                                <field name="planned_date_end" widget="daterange"/>
                                                <field name="partner_id" widget="many2many_avatar_user"/>
                                                <field name="task_timesheet_id" options="{'create': True}"/>
                                            </tree>
                                        </field>
                                    </div>
                                </page>
                                <page name="Stock" string="Stock">
                                    <group name="stock_container">
                                        <field name="project_plan_pickings" widget="many2many_tags"/>
                                    </group>
                                    <div>
                                        <field name="wizard_picking_lines">
                                            <tree editable="editable_bottom" style="width: 100%;">  <!-- Display a tree of picking lines -->
                                                <field name="product_id"/>  <!-- Display the 'product_id' field in the picking line -->
                                                <field name="quantity"/>  <!-- Display the 'quantity' field in the picking line -->
                                                <field name="standard_price"/>  <!-- Display the 'standard_price' field -->
                                                <field name="subtotal"/>  <!-- Display the 'subtotal' field -->
                                            </tree>
                                        </field>
                                        <group>
                                            <group colspan="4">
                                                <field colspan="2" name="note" nolabel="1"/>  <!-- 'note' field for additional information -->
                                            </group>
                                            <group class="oe_subtotal_footer" colspan="2" name="sale_total">
                                                <field name="plan_total_cost"/>  <!-- Display the 'plan_total_cost' field -->
                                            </group>
                                        </group>
                                    </div>
                                </page>
                            </notebook>
                        </group>
    
                        <footer>
                            <button name="action_confirm_create_project" string="Create Project"
                                type="object" class="btn-primary" />
                            <button string="Cancel" class="btn-secondary" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>