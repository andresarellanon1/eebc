<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_task_inventory_wizard_form" model="ir.ui.view">
            <field name="name">task.inventory.wizard</field>
            <field name="model">task.inventory.wizard</field>
            <field name="arch" type="xml">
                <form string="Create inventory">
                    <sheet>
                        <group>
                            <div class="o_td_label">
                                <label for="partner_id" string="Delivery Address" style="font-weight:bold;" />
                                <label for="partner_id" string="Receive From" style="font-weight:bold;" />
                                <label for="partner_id" string="Contact" style="font-weight:bold;" />
                            </div>
                            <field name="partner_id" nolabel="1"/>
                            <field name="location_id" />
                            <field name="location_dest_id"/>
                        </group>
                        <group>
                            <label for="scheduled_date"/>
                            <div class="o_row">
                                <field name="scheduled_date"/>
                            </div>
                            <field name="origin" placeholder="e.g. PO0032"/>
                        </group>

                        <notebook>
                            <page string="Operations" name="operations">

                            </page>
                            <page string="Additional Info" name="extra">

                            </page>
                            <page string="Note" name="note">

                            </page>
                        </notebook>
                        <!-- <field name="partner_id"/>
                        <field name="picking_type_id"/>
                        <field name="location_id"/>
                        <field name="location_dest_id"/>
                        <field name="scheduled_date"/>
                        <field name="origin"/>
                        <field name="task_id"/> -->
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>