<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_task_inventory_wizard_form" model="ir.ui.view">
            <field name="name">task.inventory.wizard</field>
            <field name="model">task.inventory.wizard</field>
            <field name="arch" type="xml">
                <form string="Create inventory">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="e.g. PO0032" class="w-100" required="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="picking_type_id"/>
                                <field name="location_id" />
                                <field name="location_dest_id"/>
                            </group>
                            <group>
                                <field name="scheduled_date"/>
                                <field name="origin" string="Documento de origen"/>
                                <field name="task_id" string="Tarea de origen" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Operations" name="operations">
                                <field name="stock_move_ids">
                                    <tree editable="editable_bottom">
                                        <field name="product_id"/>
                                        <field name="product_packaging_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="quantity"/>
                                        <field name="product_uom" string="Unidad"/>
                                        <field name="company_id" column_invisible="True"/>
                                        <field name="product_uom_category_id" column_invisible="True"/>
                                        <field name="picking_type_codigo"/>
                                    </tree>
                                </field> 
                            </page>
                            <page string="Additional Info" name="extra">
                                <group>
                                    
                                    <group string="Información de envío">
                                        <field name="carrier_id"/>
                                        <field name="carrier_tracking_ref"/>
                                        <field name="weight" readonly="1"/>
                                        <field name="shipping_weight" readonly="1"/>
                                    </group>
                                
                                    <group string="Otra información">
                                        <field name="group_id" readonly="1"/>
                                        <field name="company_id" readonly="1"/>
                                    </group>
                                    
                                </group>

                                <!-- Separador de Guía de Entrega -->
                                <separator string="Guía de entrega"/>

                                <group>
                                    <group>

                                        <group string="Transportar">
                                            <field name="transport_type"/>
                                            <field name="custom_document_identification"/>
                                        </group>
                                    </group>

                                    <group>

                                        <group string="Distancia">
                                            <field name="lat_origin"/>
                                            <field name="long_origin"/>
                                            <field name="lat_dest"/>
                                            <field name="long_dest"/>
                                        </group>
                                    </group>
                                </group>
                            </page>
                            <page string="Note" name="note">

                            </page>
                        </notebook>
                        <footer>
                            <button name="action_confirm_create_inventory" string="Create Inventory"
                                type="object" class="btn-primary" />
                            <button string="Cancel" class="btn-secondary" special="cancel" />
                        </footer>
                    </sheet> 
                </form>
            </field>
        </record>
    </data>
</odoo>