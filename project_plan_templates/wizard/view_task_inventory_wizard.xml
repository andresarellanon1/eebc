<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_task_inventory_wizard_form" model="ir.ui.view">
            <field name="name">task.inventory.wizard</field>
            <field name="model">task.inventory.wizard</field>
            <field name="arch" type="xml">
                <form string="Create inventory">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="origin" placeholder="e.g. PO0032" class="w-100" required="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="location_id" />
                                <field name="location_dest_id"/>
                            </group>
                            <group>
                                <label for="scheduled_date"/>
                                <div class="o_row">
                                    <field name="scheduled_date"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Operations" name="operations">
                                <field name="stock_move_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="quantity"/>
                                        <field name="product_uom"/>
                                        <field name="company_id"/>
                                    </tree>
                                </field> 
                            </page>
                            <page string="Additional Info" name="extra">
                                <field name="modified_by"/>
                            </page>
                            <page string="Note" name="note">

                            </page>
                        </notebook>
                        <field name="partner_id"/>
                        <field name="picking_type_id"/>
                        <field name="location_id"/>
                        <field name="location_dest_id"/>
                        <field name="scheduled_date"/>
                        <field name="origin"/>
                        <field name="task_id"/> 
                    </sheet> 
                </form>
            </field>
        </record>
    </data>
</odoo>