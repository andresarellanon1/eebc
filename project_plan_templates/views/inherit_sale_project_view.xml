<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_sale_project_view" model="ir.ui.view">
        <field name="name">inherit.sale.project.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_project.view_order_form_inherit_sale_project"></field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_create_project']" position="replace">
                <button id="create_project" name="action_create_project" string="Create Project" type="object" data-hotkey="q" invisible="1" groups="project.group_project_manager"/>
            </xpath>
        </field>
    </record>
</odoo>