<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define a new view that inherits from the project.task form view -->
    <record id="inherit_project_task_form_inherited2" model="ir.ui.view">
        <field name="name">inherit.project.task.form.inherited2</field>  <!-- Internal name for this custom view -->
        <field name="model">project.task</field>  <!-- The model this view is related to, in this case, 'project.task' -->
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>  <!-- Inherits from the view defined in hr_timesheet module -->

        <field name="arch" type="xml">
            <!-- Use XPath to find the 'unit_amount' field in a 'tree' view and insert a new field before it -->
            <xpath expr="//tree//field[@name='unit_amount']" position="before">
                <field name="estimated_time" widget="timesheet_uom"/> 
            </xpath>
        </field>
    </record>
</odoo>
