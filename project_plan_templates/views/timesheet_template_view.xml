<odoo>
    <data>
        <!-- Define a tree view for task.timesheet model -->
        <record id="timesheet_view_tree" model="ir.ui.view">
            <field name="name">timesheet.tree</field>  <!-- Tree view name -->
            <field name="model">task.timesheet</field>  <!-- Model the view is for -->
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>  <!-- Field to display: 'name' -->
                    <field name="description"/>  <!-- Field to display: 'description' -->
                </tree>
            </field>
        </record>

        <record id="timesheet_view_form" model="ir.ui.view">
            <field name="name">timesheet.view.form</field>  <!-- Form view name -->
            <field name="model">task.timesheet</field>  <!-- Model the form is for -->
            <field name="arch" type="xml">
                
                <form string="Task Timesheet Template"> <!-- Define the form layout -->
                    <sheet>
                        <!-- Title section -->
                        <div class="oe_title">
                            <label for="name"/> 
 
                            <h1><field name="name" class="w-100" required="1"/></h1>  <!-- Field for name (required) -->
                        </div>
                        
                        <!-- Notebook to organize different sections of the form -->
                        <notebook>

                            <!-- Description tab -->
                            <page name="description" string="Description">
                                <field name="description"/>  <!-- Display the description field -->
                            </page>

                            <!-- Time lines tab for managing task time lines -->
                            <page name="lines" string="Time lines">
                                <field name="task_time_lines" nolabel="1">
                                    <tree editable="editable_bottom" style="width: 100%;">
                                        <field name="description"/>  <!-- Field for task time line description -->
                                        <field name="estimated_time" widget="timesheet_uom"/>  <!-- Estimated time field -->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
