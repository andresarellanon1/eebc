<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_line_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_add_from_catalog']" position="replace">
                <button name="action_add_from_catalog" 
                        string="Catalog" 
                        type="object" 
                        class="px-4 btn-link" 
                        invisible="[('is_project', '=', True)]"
                        context="{'order_id': parent.id}"/>
            </xpath>
        </field>
    </record>
</odoo>
