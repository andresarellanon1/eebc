<odoo>
    <record id="view_task_inventory_line_form" model="ir.ui.view">
        <field name="name">task.inventory.line.form</field>
        <field name="model">task.inventory.line</field>
        <field name="arch" type="xml">
            <form string="Asignar Productos a Inventario de Tarea">
                <sheet>
                    <group>
                        <group>
                            <field name="task_id"/>
                            <field name="stock_picking"/>
                        </group>

                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="product_uom"/>
                            <field name="product_packaging_id"/>
                        </group>

                        <group>
                            <field name="product_uom_qty"/>
                            <field name="location_id"/>
                            <field name="location_dest_id"/>
                        </group>

                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
