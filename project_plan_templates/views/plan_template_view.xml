<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="plan_template_view_tree" model="ir.ui.view">
            <field name="name">plan.template.tree</field>
            <field name="model">project.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>    
        </record>

        <record id="plan_template_view_form" model="ir.ui.view">
            <field name="name">plan.template.view.form</field>
            <field name="model">project.plan</field>
            <field name="arch" type="xml">
                <form string="Project plan template">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" class="w-100" required="1"/></h1>
                            <group>
                                <field name="project_name"/>
                                <field name="description"/>
                            </group>
                        </div>
                        <notebook>
                            <page string="Tasks">
                                <field name="project_plan_line">
                                    <tree editable="bottom">
                                        <field name="chapter"/>
                                        <field name="name"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>