<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="plan_template_view_tree" model="ir.ui.view">
            <field name="name">plan.template.tree</field>
            <field name="model">project.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="plan_template_view_form" model="ir.ui.view">
            <field name="name">plan.template.view.form</field>
            <field name="model">project.plan</field>
            <field name="arch" type="xml">
                <form string="Plantilla de tareas de proyecto">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" class="w-100" required="1"/>
                            </h1>
                            <field name="product_template_id" string="Servicios" domain="[('id', 'in', service_project_domain)]"/>
                            <field name="service_project_domain" invisible="1"/>
                        </div>
                        <notebook>

                            <page name="description" string="DescripciÃ³n">
                                <field name="description" options="{'resizable': false}"/>
                            </page>

                            <page name="tasks" string="Tareas">
                                <field name="project_plan_lines" nolabel="1">
                                    <tree editable="editable_bottom" style="width: 100%;">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="project_plan_pickings"/>
                                        <field name="task_timesheet_id" options="{'create': True}"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- Stock Tab -->
                            <page name="stock" string="Inventario">
                                <group name="stock_container">
                                    <field name="project_plan_pickings" widget="many2many_tags"/>
                                </group>
                                <div>
                                    <field name="picking_lines" nolabel="1">
                                        <tree editable="editable_bottom" style="width: 100%;">
                                            <field name="company_id" column_invisible="1"/>
                                            <field name="name"/>
                                            <field name="product_id"/>
                                            <field name="product_uom"/>
                                            <field name="product_packaging_id"/>
                                            <field name="quantity"/>
                                            <field name="standard_price"/>
                                            <field name="subtotal"/>
                                        </tree>
                                    </field>
                                    <group>
                                        <group colspan="4">
                                            <field colspan="2" name="note" nolabel="1"/>
                                        </group>
                                        <group class="oe_subtotal_footer" colspan="2" name="sale_total">
                                            <field name="plan_total_cost"/>
                                        </group>
                                    </group>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
