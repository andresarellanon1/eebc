<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_projects_sale_order_form" model="ir.ui.view">
        <field name="name">inherit.projects.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,estimation,budget,done" invisible="is_project != True"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale" invisible="is_project != False"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="action_open_create_project_wizard" type="object" string="Create project" invisible="state != 'estimation'"/>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="replace">
                <button name="action_cancel" type="object" string="Cancel" invisible="state not in ['draft', 'sent', 'sale', 'estimation'] or not id or locked" data-hotkey="x"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="is_project" invisible="state in ('estimation', 'budget')"/>
                <field name="project_name" invisible="is_project != True"/>
            </xpath>
            <xpath expr="//tree/field[@name='product_template_id']" position="replace">
                <field name="code"/>
                <field name="products_project_domain" column_invisible="1"/>
                <field name="product_template_id" string="Product" readonly="not product_updatable" required="not display_type" context="{'partner_id': parent.partner_id,'quantity': product_uom_qty,'pricelist': parent.pricelist_id,'uom':product_uom,'company_id': parent.company_id,'default_list_price': price_unit,'default_description_sale': name}" options="{'no_open': True,}" domain="[('id', 'in', products_project_domain)]" widget="sol_product_many2one" placeholder="Type to find a product..."/>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="after">
                <page name="project_tasks" string="Project Tasks" invisible="state not in ('estimation', 'budget')">
                    <field name="project_plan_lines" widget="section_and_note_one2many" mode="tree,kanban" nolabel="1">
                        <tree editable="editable_bottom" style="width: 100%;">
                            <control>
                                <create name="add_product_control" string="Add a product"/>
                                <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                            </control>
                            <field name="sequence" widget="handle"/>
                            <field name="display_type" column_invisible="True"/>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="task_timesheet_id" options="{'create': True}"/>
                        </tree>
                    </field>
                </page>
                <page name="picking_tasks" string="Stock" invisible="state not in ('estimation', 'budget')">
                    <field name="project_picking_lines" widget="section_and_note_one2many" mode="tree,kanban" nolabel="1">
                        <tree editable="editable_bottom" style="width: 100%">
                            <field name="sequence" widget="handle"/>
                            <field name="display_type" column_invisible="True"/>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="quantity"/>
                            <field name="standard_price"/>
                            <field name="subtotal"/>
                        </tree>
                    </field>
                    <!-- Este es el lugar adecuado para usar el <group> fuera del <tree> -->
            </page>

            </xpath>
        </field>
    </record>
</odoo>