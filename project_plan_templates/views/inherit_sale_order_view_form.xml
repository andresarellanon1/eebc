<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_projects_sale_order_form" model="ir.ui.view">
        <field name="name">inherit.projects.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="is_project"/>
                <field name="project_name" invisible="is_project != True"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="replace">
                <field name="product_id" readonly="not product_updatable" required="not display_type" force_save="1" context="{'partner_id': parent.partner_id, 'quantity': product_uom_qty, 'pricelist': parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id, 'default_lst_price': price_unit, 'default_description_sale': name }" options="{ 'no_open': True, }" domain="[('sale_ok', '=', True), ('detailed_type', '=', 'service'), ('service_tracking', '=', 'project_only')]" widget="sol_product_many2one"/>
            </xpath>
        </field>
    </record>
</odoo>