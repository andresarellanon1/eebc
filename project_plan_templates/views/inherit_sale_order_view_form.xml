<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_projects_sale_order_form" model="ir.ui.view">
        <field name="name">inherit.projects.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="is_project"/>
                <field name="project_name" invisible="is_project != True"/>
                <field name="product_template_id" invisible="True" />
            </xpath>
            <xpath expr="//field[@name='product_template_id']" position="attributes">
                <attribute name="domain"> products_template_domain </attribute>
            </xpath>
        </field>
    </record>
</odoo>