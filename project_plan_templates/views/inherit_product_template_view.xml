<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define a new view that inherits from the product.template form view -->
    <record id="inherit_product_template_view" model="ir.ui.view">
        <field name="name">inherit.product.template.view</field>  <!-- Internal name of the view -->
        <field name="model">product.template</field>  <!-- The model this view belongs to -->
        <field name="inherit_id" ref="sale_project.product_template_form_view_invoice_policy_inherit_sale_project"/>  <!-- Inherit from an existing form view in the 'sale_project' module -->

        <field name="arch" type="xml">
            <!-- Use XPath to find the field 'project_template_id' and replace it with a new field -->
            <xpath expr="//field[@name='project_template_id']" position="replace">
                <field name="project_plan_id"/> 
            </xpath>
        </field>
    </record>
</odoo>
