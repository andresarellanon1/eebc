<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_analytics" name="Reporte de Materiales">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="report-header text-center">
                        <h1>Análisis de precios unitarios</h1>
                    </div>

                    <div class="report-content">
                        <p><strong>Orden de Venta:</strong> <span t-esc="doc.name"/></p>
                        <p><strong>Cliente:</strong> <span t-esc="doc.partner_id.name"/></p>
                        <p><strong>Fecha:</strong> <span t-esc="doc.date_order"/></p>
                    </div>

                    <div class="order-lines">
                        <t t-foreach="doc.order_line" t-as="line">
                            <p><strong>Producto:</strong> <span t-esc="line.product_id.name or 'Sin producto'"/></p>
                            <p><strong>Cantidad:</strong> <span t-esc="line.product_uom_qty or 'Sin cantidad'"/></p>
                            <p><strong>Precio Unitario:</strong> <span t-esc="line.price_unit or 'Sin precio'"/></p>
                            <br/>
                        </t>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Unidad de Medida</th>
                                <th>Empaque</th>
                                <th>Cantidad</th>
                                <th>Precio Estándar</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.project_picking_lines" t-as="line">
                                <tr>
                                    <!-- Mostrar el contenido de la tarea o línea directamente -->
                                    <t t-if="not line.product_id">
                                        <!-- Si no hay producto, mostrar el contenido de la línea -->
                                        <td colspan="6"><strong><span t-esc="line.name or 'Sin descripción'"/></strong></td>
                                    </t>
                                    <!-- Si hay producto, mostrar los detalles del material -->
                                    <t t-else="">
                                        <td><span t-esc="line.product_id.name"/></td>
                                        <td><span t-esc="line.product_uom.name"/></td>
                                        <td><span t-esc="line.product_packaging_id.name"/></td>
                                        <td><span t-esc="line.quantity"/></td>
                                        <td><span t-esc="line.standard_price"/></td>
                                        <td><span t-esc="line.subtotal"/></td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>
