<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_analytics" name="Reporte de Materiales">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="report-header text-center">
                        <h1>Análisis de precios unitarios</h1>
                    </div>

                    <div class="report-content">
                        <p><strong>Orden de Venta:</strong> <span t-esc="doc.name"/></p>
                        <p><strong>Cliente:</strong> <span t-esc="doc.partner_id.name"/></p>
                        <p><strong>Fecha:</strong> <span t-esc="doc.date_order"/></p>
                    </div>

                    <!-- Inicializamos la variable -->
                    <t t-set="is_table_open" t-value="False"/>

                    <!-- Primera tabla: Líneas de orden de venta -->
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Unidad de Medida</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr>
                                    <td><span t-esc="line.product_id.name or 'Sin producto'"/></td>
                                    <td><span t-esc="line.product_uom.name or 'Sin unidad'"/></td>
                                    <td><span t-esc="line.product_uom_qty or '0'"/></td>
                                    <td><span t-esc="line.price_unit or '0.00'"/></td>
                                    <td><span t-esc="line.price_subtotal or '0.00'"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Segunda tabla: Líneas del proyecto -->
                    <t t-foreach="doc.project_picking_lines" t-as="line">
                        <!-- Si no hay un producto, mostramos una descripción -->
                        <t t-if="not line.product_id">
                            <!-- Cierra la tabla si está abierta -->
                            <t t-if="is_table_open">
                                </tbody>
                                </table>
                                <t t-set="is_table_open" t-value="False"/>
                            </t>
                            <div class="section">
                                <strong><span t-esc="line.name or 'Sin descripción'"/></strong>
                            </div>
                        </t>

                        <!-- Si hay un producto -->
                        <t t-if="line.product_id">
                            <!-- Abre una nueva tabla si no hay una abierta -->
                            <t t-if="not is_table_open">
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th>Unidad de Medida</th>
                                            <th>Cantidad</th>
                                            <th>Precio Unitario</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="is_table_open" t-value="True"/>
                            </t>
                            <tr>
                                <td><span t-esc="line.product_id.name"/></td>
                                <td><span t-esc="line.product_uom.name"/></td>
                                <td><span t-esc="line.quantity"/></td>
                                <td><span t-esc="line.standard_price"/></td>
                                <td><span t-esc="line.subtotal"/></td>
                            </tr>
                        </t>
                    </t>

                    <!-- Cierra la tabla si queda abierta al final -->
                    <t t-if="is_table_open">
                        </tbody>
                        </table>
                        <t t-set="is_table_open" t-value="False"/>
                    </t>

                </t>
            </t>
        </t>
    </template>
</odoo>
