<odoo>
    <template id="report_analytics" name="Reporte de Materiales">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="report-header text-center">
                        <h1>Análisis de precios unitarios</h1>
                    </div>

                    <div class="report-content">
                        <p><strong>Orden de Venta:</strong> <span t-esc="doc.name"/></p>
                        <p><strong>Cliente:</strong> <span t-esc="doc.partner_id.name"/></p>
                        <p><strong>Fecha:</strong> <span t-esc="doc.date_order"/></p>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Unidad de Medida</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.order_line" t-as="line">
                                <t t-if="line.product_id and line.product_uom_qty and line.price_unit">
                                    <tr>
                                        <td><span t-esc="line.product_id.name or 'Sin producto'"/></td>
                                        <td><span t-esc="line.product_uom.name or 'Sin producto'"/></td>
                                        <td><span t-esc="line.product_uom_qty or 'Sin cantidad'"/></td>
                                        <td><span t-esc="line.price_unit or 'Sin precio'"/></td>
                                        <td><span t-esc="line.price_subtotal or 'Sin precio'"/></td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <!-- Sección para project_picking_lines -->
                    <t t-set="table_open" t-value="False"/>
                    <t t-foreach="doc.project_picking_lines" t-as="line">
                        <t t-if="not line.product_id">
                            <!-- Si hay tabla abierta, cerrarla antes de iniciar una nueva tabla -->
                            <t t-if="table_open">
                                </tbody>
                                </table>
                                <t t-set="table_open" t-value="False"/>
                            </t>
                            <!-- Mostrar línea sin producto como una nueva tabla -->
                            <table class="table table-condensed">
                                <tbody>
                                    <tr>
                                        <td colspan="5"><strong><span t-esc="line.name or 'Sin descripción'"/></strong></td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <!-- Si no hay tabla abierta, iniciarla -->
                            <t t-if="not table_open">
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th>Unidad de Medida</th>
                                            <th>Cantidad</th>
                                            <th>Precio Unitario</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <t t-set="table_open" t-value="True"/>
                            </t>
                            <!-- Agregar línea con producto -->
                            <tr>
                                <td><span t-esc="line.product_id.name"/></td>
                                <td><span t-esc="line.product_uom.name"/></td>
                                <td><span t-esc="line.quantity"/></td>
                                <td><span t-esc="line.standard_price"/></td>
                                <td><span t-esc="line.subtotal"/></td>
                            </tr>
                        </t>
                    </t>
                    <!-- Cerrar tabla si quedó abierta -->
                    <t t-if="table_open">
                        </tbody>
                        </table>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
