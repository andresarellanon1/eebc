<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   
    <template id="report_analytics" name="Reporte de Materiales">    
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <style>
                        
                        p {
                            margin:0;
                            font-size: 12px;
                        }
                        
                    </style>

                    <!-- Encabezado -->    

                    <div style="display: flex; justify-content: space-between;">
                        <div>
                            <strong><p>Cliente: <span>DESARROLLOS TERRAVIVA, S. DE R.L. DE C.V.</span></p></strong>
                            <strong><p>Proyecto: <span>obra24-230 RED DE ELECTRIFICACION DEL FRACC. RANCHO SAN VICENTE</span></p></strong>
                        </div>
                        <div>
                            <strong><p>Cotización: <span t-esc="doc.name"/></p></strong>
                            <strong><p>Fecha: <span t-esc="doc.date_order"/></p></strong>
                            <strong><p>Elaboró: <span>RamonAlcantar</span></p></strong>
                        </div>
                    </div>

                    <div class="report-header text-center" style="border: 2px solid black;">
                        <p><strong>Análisis de precios unitarios</strong></p>
                    </div>
                    
                    <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                        <div style="width: 60%;">
                            <div style="display: flex;">
                                <div style="margin-right: 60px;">
                                    <p>Clave:</p>
                                </div>
                                
                                <div style="text-align: left;">
                                    <p>1.1.26</p>
                                </div>
                            </div>
                            
                            <div style="margin-top: 10px;">
                                <p>1.1.26 SUM. E INST. DE POSTE DE CONCRETO T.C. 13-600. +</p>
                            </div>
                            
                        </div>
                        <div style="width: 30%; display: flex; justify-content: space-between">
                            <div>
                                <p>Unidad: </p>
                                <p>Cantidad: </p>
                                <p>Precio unitario: </p>
                                <p>Total: </p>
                            </div>
                            
                            <div style="text-align: right;">
                                <p>PZA</p>
                                <p>8.00</p>
                                <p>16,240.00</p>
                                <p>129,920.00</p>
                            </div>
                            
                        </div>
                    </div>
                    
                    <!-- Inventario -->    

                    <div style="width: 100%;">
                      <table style="border-collapse: collapse;">
                          <thead>
                              <tr style="border-collapse: collapse;">
                                  <th style="width: 5%; border: 2px solid black;">C</th>
                                  <th style="width: 10%; border: 2px solid black; text-align: left">Clave</th>
                                  <th style="width: 35%; border: 2px solid black; text-align: left">Descripción</th>
                                  <th style="width: 10%; border: 2px solid black;">Unidad</th>
                                  <th style="width: 10%; border: 2px solid black; text-align: right">Cantidad</th>
                                  <th style="width: 15%; border: 2px solid black; text-align: right">Costo Unitario</th>
                                  <th style="width: 15%; border: 2px solid black; text-align: right">Total</th>
                              </tr>
                              <tr>
                                <td colspan="7" style="font-weight: bold;">Materiales</td>
                              </tr>
                          </thead>
                          <tbody>
                              <tr>
                                  <td> </td>
                                  <td>8003</td>
                                  <td>8002 POSTE DE CONCRETO TIPO COSTA 13-600</td>
                                  <td style="text-align: center">PZA</td>
                                  <td style="text-align: right">1.0000000</td>
                                  <td style="text-align: right">9,700.00</td>
                                  <td style="text-align: right">9,700.00</td>
                              </tr>
                            
                              <tr style="border-top: 20px solid white;">
                                  <td colspan="6" style="font-weight: bold;">Total de materiales</td>
                                  <td style="text-align: right; font-weight: bold;">9,700.00</td>
                              </tr>
                            
                              <tr style="border-top: 10px solid white;">
                                  <td colspan="6" style="font-weight: bold;">Mano de obra</td>
                              </tr>
                                                       
                              <tr>
                                  <td> </td>
                                  <td>CI</td>
                                  <td>CI-2 CUADRILLA INSTALADORA</td>
                                  <td style="text-align: center">jor</td>
                                  <td style="text-align: right">1.5000000</td>
                                  <td style="text-align: right">1,000.00</td>
                                  <td style="text-align: right">1,500.00</td>
                              </tr>
                              
                              <tr style="border-top: 20px solid white;">
                                  <td colspan="6" style="font-weight: bold;">Total de Mano de obra</td>
                                  <td style="text-align: right; font-weight: bold;">1,500.00</td>
                              </tr>
                              
                              <tr>
                                  <td> </td>
                                  <td></td>
                                  <td style="font-weight: bold;">Costo directo</td>
                                  <td></td>
                                  <td></td>
                                  <td></td>
                                  <td style="text-align: right; font-weight: bold;">11,200.00</td>
                              </tr>
                            
                              <tr>
                                  <td> </td>
                                  <td></td>
                                  <td style="font-weight: bold;">Utilidad</td>
                                  <td></td>
                                  <td></td>
                                  <td style="text-align: right; font-weight: bold;">45.0000%</td>
                                  <td style="text-align: right; font-weight: bold;">5,040.00</td>
                              </tr>
                            
                              <tr>
                                  <td> </td>
                                  <td></td>
                                  <td style="font-weight: bold;">Precio unitario</td>
                                  <td></td>
                                  <td></td>
                                  <td></td>
                                  <td style="text-align: right; font-weight: bold;">16,240.00</td>
                              </tr>
                            
                              <tr>
                                  <td> </td>
                                  <td></td>
                                  <td style="font-weight: bold;">IVA (8.00%)</td>
                                  <td></td>
                                  <td></td>
                                  <td></td>
                                  <td style="text-align: right; font-weight: bold;">1,299.20</td>
                              </tr>
                            
                              <tr>
                                  <td> </td>
                                  <td></td>
                                  <td style="font-weight: bold;">Total</td>
                                  <td></td>
                                  <td></td>
                                  <td></td>
                                  <td style="text-align: right; font-weight: bold;">17,539.20</td>
                              </tr>
                            
                              <tr style="border-top: 20px solid white; text-align: center;">
                                <td colspan="6" style="font-weight: bold;">(* DIECISIETE MIL QUINIENTOS TRINTA Y NUEVE PESOS 20/100 MXN*)</td>
                              </tr>
                            
                              <tr style="border-top: 25px solid white;">
                              <tr style="border-top: 2px solid black;">
                                
                          </tbody>
                      </table>
                  </div>



                    <!--Inventario-->

                    <table class="table table-condensed">
                        <tbody>
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Unidad de Medida</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unitario</th>
                                    <th>Total</th>
                                </tr>
                                
                            </thead>
                            
                            <t t-set="total_subtotal_mat" t-value="0"/>
                            <t t-set="total_subtotal_man" t-value="0"/>
                            <t t-set="order_lines_used" t-value="[]"/> 

                            <t t-foreach="doc.project_picking_lines" t-as="line">
                                <t t-if="line.for_create == True">
                                    <t t-if="line.product_id">
                                        <tr>
                                            <td><span t-esc="line.product_id.name"/></td>
                                            <td><span t-esc="line.product_uom.name"/></td>
                                            <td><span t-esc="line.quantity"/></td>
                                            <td><span t-esc="line.standard_price"/></td>
                                            <td><span t-esc="line.subtotal"/></td>
                                            <t t-set="total_subtotal_mat" t-value="total_subtotal_mat + line.subtotal"/>
                                        </tr>  
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <th colspan="4" style="text-align: right; " class="bg-transparent">Total:</th>
                                            <td style="text-align: left;" class="bg-transparent">
                                                <span t-esc="total_subtotal_mat"/>
                                            </td>
                                            <t t-set="total_subtotal_mat" t-value="0"/>
                                        </tr>
                                        <tr>
                                            <td colspan="5">
                                                <strong><span t-esc="line.name or 'Sin descripción'"/></strong>
                                            </td>
                                        </tr>
                    
                                        <t t-foreach="doc.project_plan_lines" t-as="task_line">
                                            <t t-if="task_line.name == line.name and task_line.task_timesheet_id">
                                                <t t-foreach="task_line.task_timesheet_id" t-as="time_line">
                                                    <t t-foreach="time_line.task_time_lines" t-as="time_lines">
                                                        <tr>
                                                            <td><span t-esc="time_lines.description"/></td>
                                                            <td>Jornada</td>
                                                            <td><span t-esc="time_lines.work_shift"/></td>
                                                            <td>0</td>
                                                            <td>0</td>
                                                        </tr>
                                                    </t>
                                                </t>
                                                <tr>
                                                    <th colspan="4" style="text-align: right; " class="bg-transparent">Total:</th>
                                                    <td style="text-align: left;" class="bg-transparent">
                                                        <span t-esc="total_subtotal_man"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </t>
                                
                                
                                <t t-if="line.for_create == False">
                                    <tr>
                                        <td colspan="5" style="background-color: #FFFFFF; color: #FFFFFF; text-align: center;  border: 1px solid #FFFFFF;">
                                             x 
                                        </td>
                                    </tr>  
                                    <t t-set="order_line_match" t-value="False"/>

                                    <t t-foreach="doc.order_line" t-as="order_line">
                                        <t t-if="not order_line_match and order_line.product_id.name == line.name and order_line.id not in order_lines_used">
                                            <tr>
                                                <td style="vertical-align: top; font-weight: bold; width: 30%; border-right: 1px solid #ddd;">
                                                    <span t-esc="order_line.product_id.name or 'Sin producto'"/>
                                                </td>
                                                <td style="vertical-align: top; width: 100%;" colspan="4">
                                                    <table class="table table-borderless" style="margin: 0; width: 100%;">
                                                    <tr>
                                                        <th style="text-align: left; font-weight: normal; padding: 0;" class="bg-transparent">Unidad de Medida:</th>
                                                        <td style="text-align: left; padding: 0;" class="bg-transparent">
                                                            <span t-esc="order_line.product_uom.name or 'Sin unidad de medida'"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th style="text-align: left; font-weight: normal; padding: 0;" class="bg-transparent">Cantidad:</th>
                                                        <td style="text-align: left; padding: 0;" class="bg-transparent">
                                                            <span t-esc="order_line.product_uom_qty or 'Sin cantidad'"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th style="text-align: left; font-weight: normal; padding: 0;" class="bg-transparent">Precio Unitario:</th>
                                                        <td style="text-align: left; padding: 0;" class="bg-transparent">
                                                            <span t-esc="order_line.price_unit or '0'"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th style="text-align: left; font-weight: normal; padding: 0;" class="bg-transparent">Total:</th>
                                                        <td style="text-align: left; padding: 0;" class="bg-transparent">
                                                            <span t-esc="order_line.price_subtotal or '0'"/>
                                                        </td>
                                                    </tr>

                                                </table>
                                                </td>
                                                <tr>
                                                    <td colspan="5" style="background-color: #FFFFFF; color: #FFFFFF; text-align: center;  border: 1px solid #FFFFFF;">
                                                         x 
                                                    </td>
                                                </tr>

                                                <thead>
                                                    <tr>
                                                        <th>Producto</th>
                                                        <th>Unidad de Medida</th>
                                                        <th>Cantidad</th>
                                                        <th>Precio Unitario</th>
                                                        <th>Total</th>
                                                    </tr>
                                                </thead>
                                            </tr>
                                            <t t-set="order_lines_used" t-value="order_lines_used + [order_line.id]"/>
                                            <t t-set="order_line_match" t-value="True"/>
                                        </t>
                                        
                                    </t>
                                </t>
                                
                            </t>
                            <tr>
                                <th colspan="4" style="text-align: right; " class="bg-transparent">Total:</th>
                                <td style="text-align: left;" class="bg-transparent">
                                    <span t-esc="total_subtotal_mat"/>
                                </td>
                                <t t-set="total_subtotal_mat" t-value="0"/>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>

