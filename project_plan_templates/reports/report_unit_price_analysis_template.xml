<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="project_stock_report_template">
        <t t-call="web.html_container">
            <t t-foreach="doc.project_picking_lines" t-as="line">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Unidad de medida</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><t t-esc="line.product_id.name"/></td>
                            <td><t t-esc="line.product_uom.name"/></td>
                            <td><t t-esc="line.quantity"/></td>
                            <td><t t-esc="line.subtotal"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
</odoo>
