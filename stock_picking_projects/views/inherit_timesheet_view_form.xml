<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_timesheet_view_form" model="ir.ui.view">
        <field name="name">inherit.timesheet.view.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='company_id']" position="replace">
                <field name="pickin_ids" widget="many2many_tags" options="{'no_create': True}" string="Operaciones de Inventario"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="Planeacion" string="Planeación" invisible="not project_id">
                    <group name="planning_container">
                        <group name="activities">
                            <field name="actividades" context="{'default_project_id': project_id, 'default_display_in_project': False, 'default_user_ids': user_ids, 'default_parent_id': id, 'default_partner_id': partner_id, 'default_milestone_id': allow_milestones and milestone_id}" widget="subtasks_one2many">
                                <tree editable="bottom" decoration-muted="state in ['1_done','1_canceled']" open_form_view="True">
                                    <field name="activity_id" string="Actividades"/>
                                    <field name="activity_summary" string="Descripción"/>
                                    <field name="timesheet_id" widget="handle"/>
                                </tree>
                            </field>
                        </group>
                        <group name="used_materials">
                            
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>