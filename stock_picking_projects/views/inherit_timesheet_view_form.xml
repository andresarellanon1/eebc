<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_timesheet_view_form" model="ir.ui.view">
        <field name="name">inherit.timesheet.view.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='company_id']" position="replace">
                <field name="pickin_ids" widget="many2many_tags" options="{'no_create': True}" string="Operaciones de Inventario"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="Planeacion" string="PlaneaciÃ³n">
                    <field name="activities_tmpl_id"/>
                    <group name="planning_container">
                        <group name="activities">
                            
                        </group>
                        <group name="used_materials">
                            <field name="product_ids" string="Productos">
                                <tree editable="bottom">
                                    <field name="product_tmpl_id" string="Producto"/>
                                    <field name="name"/>
                                    <field name="list_price"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>