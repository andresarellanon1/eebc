<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_timesheet_view_form" model="ir.ui.view">
        <field name="name">inherit.timesheet.view.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='company_id']" position="replace">
                <field name="pickin_ids" widget="many2many_tags" options="{'no_create': True}"
                       string="Operaciones de Inventario"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="Planeacion" string="PlaneaciÃ³n">
                    <label for="activities_tmpl_id" string="Cargar plantilla: "/>
                    <field name="activities_tmpl_id"/>
                    <group name="planning_container">
                        <group name="activities">
                            <field name="line_activities_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="description"/>
                                </tree>
                            </field>
                        </group>
                        <group name="used_materials">
                            <field name="product_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="reserved_qty"/>
                                    <field name="supplier_cost"/>
                                    <field name="total_cost"/>
                                    <field name="name" column_invisible="true"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>