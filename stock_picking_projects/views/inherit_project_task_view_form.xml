<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_project_task_view_form" model="ir.ui.view">
        <field name="name">inherit.project.task.view.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra_info']" position="after">
                <page name="material" string="Material">
                    <field name="stock_ids">
                        
                    </field>
                    <field name="move_ids" widget="one2many_list" mode="tree,form">
                        <tree>
                            <field name="product_id" string="Producto"/>
                            <field name="product_uom_qty" string="Cantidad"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                        <form>
                            <group>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>