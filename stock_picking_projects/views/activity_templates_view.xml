<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="activity_template_action" model="ir.actions.act_window">
            <field name="name">activity template action</field>
            <field name="res_model">activity.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="activity_template_action_view_tree" model="ir.ui.view">
            <field name="name">activity.template.action.tree</field>
            <field name="model">activity.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="activity_template_view_form" model="ir.ui.view">
            <field name="name">activity.template.action.form</field>
            <field name="model">activity.template</field>
            <field name="arch" type="xml">
                <form string="Actividades">
                    <sheet>
                        <field name="name"/>
                        <field name="description"/>
                        <notebook>
                            <page string="Actividades">
                                <group>
                                    <tree>
                                        <field name="line_activities_ids">
                                            <field name="name"/>
                                            <field name="description"/>
                                        </field>
                                    </tree>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_activity_template" 
                  name="Plantillas de Actividad" 
                  parent="project.menu_project_configuration" 
                  action="activity_template_action"/>
    </data>
</odoo>