<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="activity_template_action" model="ir.actions.act_window">
            <field name="name">activity template action</field>
            <field name="res_model">activity.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="activity_template_action_view_tree_1"/> <!-- Vista por defecto -->
        </record>

        <record id="activity_template_action_view_tree_1" model="ir.ui.view">
            <field name="name">activity.template.action.tree.1</field>
            <field name="model">activity.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <!-- <field name="allocated_hours" string="Horas" widget="timesheet_uom_no_toggle"/> -->
                </tree>
            </field>
        </record>
        
        <record id="activity_template_action_view_tree_2" model="ir.ui.view">
            <field name="name">activity.template.action.tree.2</field>
            <field name="model">activity.template</field>
            <field name="arch" type="xml">
                <field name="line_activities_ids">
                    <tree>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="allocated_hours" string="Horas" widget="timesheet_uom_no_toggle"/>
                    </tree>
                </field>
            </field>
        </record>


        <record id="activity_template_view_form" model="ir.ui.view">
            <field name="name">activity.template.action.form</field>
            <field name="model">activity.template</field>
            <field name="arch" type="xml">
                <form string="Actividades">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="allocated_hours" string="Horas" widget="timesheet_uom_no_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>